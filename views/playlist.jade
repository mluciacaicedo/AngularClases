extends layoutplaylist

block content
        .col-md-4.col-md-offset-4
            h3 Discografia Maroon 5
            div(ng-controller="PlaylistAddController")
                input.form-control(type="text" name="agregar" ng-model="addcancion")
                br
                input.btn.btn-success(type="button" value="agregar" ng-click="agregar()") 
        br
        .row.col-md-4.col-md-offset-4
            br
            .col-md-6
                .container(ng-controller="PlaylistController")
                    ol
                        li(ng-repeat="song in playlist"){{song}}
            .col-md-6
                .container(ng-controller="PlaylistUpdateController")
                    ol
                        li(ng-repeat="song in playlist"){{song}}
                            a(ng-click="borrar($index)") X

